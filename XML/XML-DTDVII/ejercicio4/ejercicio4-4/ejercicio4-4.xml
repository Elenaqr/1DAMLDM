<!DOCTYPE resoluciones [
    <!ELEMENT resoluciones (recolucion*)> <!-- Elemento raíz con 0 o más elementos 'recolucion' -->
    <!ELEMENT recolucion EMPTY> <!-- Elemento 'recolucion' tiene el nombre de un recolucion -->
    <!ATTLIST recolucion nombre CDATA #REQUIRED> <!-- Atributo 'nombre' de tipo CDATA y obligatorio -->
    <!ATTLIST recolucion alto CDATA #REQUIRED> <!-- Elemento 'nombre' de tipo CDATA y obligatorio -->
    <!ATTLIST recolucion ancho CDATA #REQUIRED> <!-- Elemento 'nombre' de tipo CDATA y obligatorio -->
]>

<resoluciones>
    <recolucion nombre="VGA" alto="480" ancho="640" />
    <recolucion nombre="XGA" alto="1024" ancho="768" />
    <recolucion nombre="HD 1080" alto="1920" ancho="1080" />
</resoluciones>